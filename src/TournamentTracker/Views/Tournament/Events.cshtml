@model TournamentTracker.Models.TournamentModels.EventViewModel

@{
    ViewData["Title"] = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EventsView</h2>

<p>
    <a asp-action="CreateEvent">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Event Name:
            </th>
            <th>
                Location Name:
            </th>
            <th>
                Event Start Date:
            </th>
            <th>
                Description:
            </th>
            <th>
                Event Host:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.evtTable) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.EventID">Edit</a>*@ |
                <a asp-action="Details" asp-route-id="@item.EventID">Details</a> |
                @*<a asp-action="Delete" asp-route-id="@item.EventID">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
