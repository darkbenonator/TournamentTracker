@model TournamentTracker.Models.TournamentModels.GamesEdit
<h4>Games</h4>
@foreach (var game in Model.GamesViewList) {
    
    <form asp-action="EditGame">
        <div class="form-horizontal">
            <h4>@game.Round</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@game.GameRulesID" />
            <div class="form-group">
                <label asp-for="@game.EventID" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <select asp-for="@game.EventID" class="form-control" asp-items="ViewBag.EventID"></select>
                    <span asp-validation-for="@game.EventID" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@game.ExtraRules" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="@game.ExtraRules" class="form-control" />
                    <span asp-validation-for="@game.ExtraRules" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@game.GameLength" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="@game.GameLength" class="form-control" />
                    <span asp-validation-for="@game.GameLength" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@game.PrimaryMission1" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <select asp-for="@game.PrimaryMission1" class="form-control" asp-items="ViewBag.PrimaryMission1"></select>
                    <span asp-validation-for="@game.PrimaryMission1" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@game.PrimaryMission2" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <select asp-for="@game.PrimaryMission2" class="form-control" asp-items="ViewBag.PrimaryMission2"></select>
                    <span asp-validation-for="@game.PrimaryMission2" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@game.PrimaryMissionDrawScore" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="@game.PrimaryMissionDrawScore" class="form-control" />
                    <span asp-validation-for="@game.PrimaryMissionDrawScore" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@game.PrimaryMissionWinScore" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="@game.PrimaryMissionWinScore" class="form-control" />
                    <span asp-validation-for="@game.PrimaryMissionWinScore" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@game.Round" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="@game.Round" class="form-control" />
                    <span asp-validation-for="@game.Round" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@game.SecondaryMission1" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <select asp-for="@game.SecondaryMission1" class="form-control" asp-items="ViewBag.SecondaryMission1"></select>
                    <span asp-validation-for="@game.SecondaryMission1" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@game.SecondaryMission2" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <select asp-for="@game.SecondaryMission2" class="form-control" asp-items="ViewBag.SecondaryMission2"></select>
                    <span asp-validation-for="@game.SecondaryMission2" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@game.SecondaryMission3" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="@game.SecondaryMission3" class="form-control" />
                    <span asp-validation-for="@game.SecondaryMission3" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@game.SecondaryMissionDrawScore" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="@game.SecondaryMissionDrawScore" class="form-control" />
                    <span asp-validation-for="@game.SecondaryMissionDrawScore" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@game.SecondaryMissionWinScore" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="@game.SecondaryMissionWinScore" class="form-control" />
                    <span asp-validation-for="@game.SecondaryMissionWinScore" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
