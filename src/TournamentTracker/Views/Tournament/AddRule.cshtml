@model TournamentTracker.Models.GameModels.Rules

@{
    ViewData["Title"] = "AddRule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddRule</h2>

<form asp-action="CreateRule" method="post" >
    <div class="form-horizontal">
        <h4>Rules</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Rule" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Rule" class="form-control" />
                <span asp-validation-for="Rule" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RuleName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RuleName" class="form-control" />
                <span asp-validation-for="RuleName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
